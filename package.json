  "scripts": {
    "copyAll": "cp -R 'static' 'build' && cp -R 'src/Views' 'build'",
    "dev:server": "nodemon --exec cross-env NODE_ENV=development node --inspect=5858 -r ts-node/register ./src/init.ts --ignore '.scss', --ignore 'static'",
    "dev:assets": "cross-env WEBPACK_ENV=development TS_NODE_PROJECT=\"./tsconfig-for-webpack-config.json\" webpack -w",
    "build:server": "babel src --out-dir build --ignore \"src/Assets\" --extensions \".ts,.tsx\"",
    "build:assets": "cd src && WEBPACK_ENV=production webpack",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    "start": "NODE_ENV=production node build/init.js",
    "prestart": "npm run build",
    "tunnel": "lt --port 4000"
  },
  "nodemonConfig": {
    "ignore": [
      "./src/**/*.test.ts",
      "./src**/*.spec.ts",
      ".git",
      "node-modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
